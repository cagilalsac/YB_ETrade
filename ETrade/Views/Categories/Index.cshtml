@model IEnumerable<APP.Business.Models.CategoryResponse>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<hr />
<div class="container">
    @if (ViewBag.RecordsCount is not null)
    {
        <p class="text-primary">
            @ViewBag.RecordsCount
        </p>
    }
    @if (TempData["OperationMessage"] is not null)
    {
        <p class= "text-primary" >
            @TempData["OperationMessage"]
        </p>
    }
    <a asp-action="Create">Create</a>
    <table class="table">
        <tr>
            <th>
                @* Way 1: *@
                @* Category Name *@
                @* Way 2: *@
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                @* Way 1: *@
                @* <td>@category.Name</td> *@
                @* Way 2: *@
                <td>@Html.DisplayFor(model => category.Name)</td>

                <td>@Html.DisplayFor(model => category.Description)</td>

                <td><a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id">Details</a></td>
                <td><a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">Edit</a></td>
                <td><a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>
            </tr>
        }
    </table>
</div>
